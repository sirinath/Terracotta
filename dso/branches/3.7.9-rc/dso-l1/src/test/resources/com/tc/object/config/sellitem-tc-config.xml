<tc:tc-config 
    xmlns:tc="http://www.terracotta.org/config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.terracotta.org/config ..\..\..\common\src.resources\com\tc\config\schema\terracotta-2.2.xsd">

  <system>
    <configuration-model>development</configuration-model>
  </system>

  <clients>
    <logs>%d/client-logs-%h</logs>
  </clients>

  <servers>
    <server host="%i"/>
  </servers>

  <application>
    <spring>
      <jee-application name="*">

        <session-support>true</session-support>

        <instrumented-classes>
          <include>
            <class-expression>com.tctest.spring.integrationtests.tests.sellitem.Sale</class-expression>
            <honor-transient>true</honor-transient>
          </include>
<!--
          <include>
            <class-expression>org.springframework.validation..*</class-expression>
            <honor-transient>true</honor-transient>
          </include>  
-->
        </instrumented-classes>

        <fast-proxy>true</fast-proxy>

        <application-contexts> 
          <application-context>
            <paths>
              <path>/WEB-INF/sellitem-beans.xml</path>
              <path>/WEB-INF/classes/org/springframework/webflow/samples/sellitem/applicationContext.xml</path>
            </paths>
          </application-context>

        </application-contexts>
      </jee-application>
    </spring>
  </application>

</tc:tc-config>
