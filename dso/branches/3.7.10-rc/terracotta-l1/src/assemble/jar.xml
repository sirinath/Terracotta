<assembly>
  <id>jar</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>org.terracotta.internal:*</include>
      </includes>
      <unpack>true</unpack>
      <scope>provided</scope>
      <unpackOptions>
        <excludes>
          <exclude>**/META-INF/maven/**</exclude>
        </excludes>
      </unpackOptions>      
    </dependencySet>
  </dependencySets>
  
  <files>
    <file>
      <source>${project.build.directory}/MANIFEST.MF</source>
      <outputDirectory>META-INF</outputDirectory>
    </file>
  </files>
  
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/maven-archiver</directory>
      <outputDirectory>/META-INF/maven/${project.groupId}/${project.artifactId}</outputDirectory>
      <includes>
        <include>pom.properties</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}</directory>
      <outputDirectory>/META-INF/maven/${project.groupId}/${project.artifactId}</outputDirectory>
      <includes>
        <include>pom.xml</include>
      </includes>
    </fileSet>    
  </fileSets>  
</assembly>
