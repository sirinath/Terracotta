      desktop="no"
      programGroup="yes"
      target="java"
      commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
      description="Uninstall Terracotta ${project.version}"
      name="Uninstall"
      startup="no"
      startMenu="no"
      initialState="noShow"
      applications="no"
  />
