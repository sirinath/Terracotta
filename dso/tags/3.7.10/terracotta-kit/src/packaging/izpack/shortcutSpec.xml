<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
  <programGroup defaultName="Terracotta-${project.version}" location="applications"/>
  <shortcut
      desktop="yes"
      programGroup="yes"
      description="Start the Terracotta Developer Console"
      name="Terracotta Developer Console"
      startup="no"
      startMenu="no"
      iconIndex="0"
      initialState="noShow"
      target="$INSTALL_PATH\bin\dev-console.bat"
      iconFile="$INSTALL_PATH/lib/resources/icons/logo_small.ico"
      applications="no"
  />
  <shortcut
      desktop="no"
      programGroup="yes"
      target="http://www.terracotta.org/web/display/docs/Home"
      description="View the Terracotta documentation online"
      name="Terracotta Documentation"
      startup="no"
      startMenu="no"
      iconIndex="0"
      initialState="noShow"
      iconFile="$INSTALL_PATH/lib/resources/icons/logo_small.ico"
      applications="no"
  />
  <shortcut
      desktop="no"
      programGroup="yes"
      target="http://www.terracotta.org/web/display/orgsite/Tutorials"
      description="View the Terracotta Quick Start Guides online"
      name="Terracotta Quick Start Guides"
      startup="no"
      startMenu="no"
      iconIndex="0"
      initialState="noShow"
      iconFile="$INSTALL_PATH/lib/resources/icons/logo_small.ico"
      applications="no"
  />
  <shortcut
      desktop="no"
      programGroup="yes"
      target="http://forge.terracotta.org/"
