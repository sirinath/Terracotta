<tc:tc-config xmlns:tc="http://www.terracotta.org/config">
  <system>
    <configuration-model>development</configuration-model>
  </system>
  <servers>
    <server name="perf03.terracotta.lan">
      <data>data/server-data</data>
      <logs>logs/server-logs</logs>

      <dso>        
        <!-- <persistence> -->
        <!--   <mode>permanent-store</mode> -->
        <!-- </persistence> -->

        <garbage-collection>
          <enabled>false</enabled>
          <interval>30</interval>
          <verbose>true</verbose>
        </garbage-collection>
      </dso>
    </server>
  </servers>
  <clients>
    <logs>/export1/bench/working/instance/logs/</logs>
  </clients>
  <application>
    <dso>
      <instrumented-classes>
        <include>
          <class-expression>com.tctest.performance.sampledata..*</class-expression>
          <honor-transient>true</honor-transient>
        </include>

        <include>
          <class-expression>com.tctest.performance.servlets.LongRunningTestServlet$DataObject</class-expression>
        </include>

        <!--Then exclude tomcat internals to improve performance of webapp load-->
        <exclude>org.apache.coyote..*</exclude>
        <exclude>org.apache.catalina..*</exclude>
        <exclude>org.apache.jasper..*</exclude>
        <exclude>org.apache.tomcat..*</exclude>
        <exclude>weblogic..*</exclude>
        <exclude>com.rsa..*</exclude>
      </instrumented-classes>
      <web-applications>
        <web-application>perftest</web-application>
      </web-applications>
    </dso>
  </application>
</tc:tc-config>
